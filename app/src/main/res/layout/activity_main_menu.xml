<?xml version="1.0" encoding="utf-8" ?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context=".DBMainMenu">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/mainMenuImage"
        android:src="@drawable/main_menu" />

    <RelativeLayout
        android:id="@+id/mainButtons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp">

        <ImageButton
            android:id="@+id/btnPlay"
            android:src="@drawable/playselector"
            android:clickable="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="20dp"
            android:layout_width="150dp"
            android:layout_height="70dp"
            android:scaleType="fitCenter"
            android:contentDescription="@string/play_button_content_desc" >
        </ImageButton>


        <ImageButton
            android:id="@+id/btnStgs"
            android:src="@drawable/stgsselector"
            android:clickable="true"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/stgs_button_content_desc" >
        </ImageButton>

        <ImageButton
            android:id="@+id/btnExit"
            android:src="@drawable/exitselector"
            android:clickable="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="20dp"
            android:layout_width="150dp"
            android:layout_height="70dp"
            android:scaleType="fitCenter"
            android:contentDescription="@string/exit_button_content_desc" >
        </ImageButton>

    </RelativeLayout>

</RelativeLayout>
